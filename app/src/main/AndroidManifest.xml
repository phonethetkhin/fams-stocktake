<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.t3k.mobile.fams.stocktake"
    android:installLocation="auto">

    <application
        android:name="com.t3k.mobile.fams.stocktake.utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/stock_take_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/stock_take_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.GetRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.GetLicenseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.ServerChangeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.HomeActivity"
            android:label="@string/nav_title_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.QRCodeScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.StockTakingActivity"
            android:label="@string/title_stock_taking"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.ScanActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_stock_taking"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.UnknownActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.TakenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.RemainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.RemarkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.UnknownRemarkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.SelectUploadLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.UploadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.t3k.mobile.fams.stocktake.ui.UploadHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>